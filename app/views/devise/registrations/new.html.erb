<div class="new-area">
  <div class="new-box">
    <h2>新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-part" %>
      </div>  
      
      <div class="form-group">
        <%= f.label :仕事・特技 %><br />
        <%= f.text_field :work, autofocus: true, autocomplete: "work", class: "form-part" %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %><br />
        <%= f.select :adress, User.adresses.keys, {prompt: '選択してください'}, autofocus: true, autocomplete: "adress", class: "form-part" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-part" %>
      </div>

      <%# <div class="field">
        <%= f.label :性別 %>
        <%# <%= f.select :gender, User.genders.keys, {prompt: '選択してください'}, autofocus: true, autocomplete: "gender" %>
      <%# </div> %> 

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-part" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-part" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する",class: "sign-up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
  <div class="right-box"></div>
</div>