<div class="login-area">
  <div class="user-new-box">
    <div class="left-box">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-part" %>
        </div>

        <div class="form-group">
          <%= f.label :"パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: "form-part" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン",class: "sign-up" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="right-box">
      <%= image_tag 'tori.jpg', class:"login-img" %> 
    </div>
  </div>
</div>
