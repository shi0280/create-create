<header>
  <div class="header-left">
    <% if @user.id == current_user.id %>
      <h1>Message*</h1>
    <% else %>
      <h1><%= @user.name %>'s page</h1>
    <% end %>
  </div>
  <div class="header-right">
    <ul class="header-nav">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "マイページ", user_path(@user.id) %></li>
    </ul> 
  </div>
</header>


<div class="search-box">
  <%= search_form_for @q do |f| %>
    <div class="search-item">
      <%= f.label :work, "Work: 　" %>
      <%= f.search_field :work_cont %>
    </div>
    <div class="search-item">
      <%= f.label :age, "Age:　　" %>
      <%= f.number_field :age_gteq %>以上〜
      <%= f.number_field :age_lt %>未満
    </div>
    <div class="search-item">
      <%= f.label :adress, "Address:" %>
      <%= f.select :adress_eq, User.adresses.to_a.map{|k, v| [User.adresses_i18n[k], v]} %>
    </div>
    <%= f.submit "検索" %> 
  <% end %>
</div>

<div class="users">
  <% @users.each do |user| %>
    <div class="user-box">
      <div class="user-img">
        <%= link_to user_path(user.id) do %>
          <% if user.image? %>  
            <%= image_tag user.image.url, class: "user-img__item" %>
          <% else %>
            <%= image_tag 'noimage2.png', class: "user-img__item"  %>
          <% end %>
        <% end %>
        <div class="user-info">
          <%= link_to user_path(user.id) do %>
            <p><%= user.name %></p>
            <p><%= user.work %></p>
            <p><%= user.adress %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>