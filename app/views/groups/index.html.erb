<header>
    <div class="header-left">
      <h1>Invitation*</h1>
    </div>
    <div class="header-right">
      <ul class="header-nav">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in?%>
          <li><%= link_to "マイページ", user_path(current_user.id) %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
          <li><%= link_to "新規登録", new_user_registration_path %></li>
        <% end %>
      </ul> 
    </div>
</header>

<div class="invitation">
  <div class="side">
    <%= search_form_for @q do |f| %>
      <%= f.label :name, "グループ名" %>
      <%= f.search_field :name_cont %>
      <%= f.label :name, "ユーザー名" %>
      <%= f.search_field :users_name_cont %>
      <%=  f.label :title, "Keyword" %>
      <%= f.search_field :name_or_recruitments_title_or_recruitments_description_cont %>
      <%= f.label :adress, "Address:" %> 
      <%= f.select :recruitments_adress_eq, Recruitment.adresses.to_a.map{|k, v| [Recruitment.adresses_i18n[k], v]}  %>

      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="main">
    <div class="invitation-box">
      <% @groups.each do |group| %>
          <%= group.name %>
          <% group.users.each do |user| %>
            <ul>             
              <%= link_to user_path(user) do %>
                <li><%= user.name %></li>
                <li><%= image_tag "#{user.image}", class: "recruitment-image" %></li>
              <% end %>
            </ul>
        <% end %>
        <% group.recruitments.each do |recruitment| %>
          <ul>
            <li><%= recruitment.title %></li>
            <li><%= image_tag "#{recruitment.image}", class: "recruitment-image" %></li>
            <li><%= recruitment.adress %></li>
            <li><%= recruitment.description %></li>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>