<div class="side">
  <div class= "new-group">
    <%= link_to "Make Member", new_member_path, class:"make-member-btn" %>
  </div>
  <div class="member">
    <% @members.each do |member| %>
      <%= link_to member_messages_path(member) do %> 
        <p class="member-name"><%= member.name %></p> 
      <% end %>
      <div class ="member-list">
        <% member.users.each do |user| %>
          <ul>             
            <li><%= user.name %></li>
            <li><%= image_tag "#{user.image}", class: "member-image" %></li>
          </ul>
        <% end %>
      </div>
      <% if member.users.count > 1 %>
        <p class="member-count">他{<%= member.users.count-1 %>人}</p>
      <% end %>
      <p class="last-message"><%= member.show_last_message %><br>
    <% end %>
  </div>
</div>