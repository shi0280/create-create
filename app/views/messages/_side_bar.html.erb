<div class="side">
  <div class= "new-group">
    <%= link_to "Make Member", new_member_path %>
  </div>
  <div class="member">
    <% @members.each do |member| %>
      <%= link_to member_messages_path(member) do %> 
        <%= member.name %> 
      <% end %>
      <% member.users.each do |user| %>
        <ul>             
          <li><%= user.name %></li>
          <li><%= image_tag "#{user.image}", class: "member-image" %></li>
        </ul>
      <% end %>
      <% if member.users.count > 1 %>
        <p>他{<%= member.users.count-1 %>人}</p>
      <% end %>
    <% end %>
  </div>
</div>